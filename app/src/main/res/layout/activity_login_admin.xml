<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_brg_login2">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/brg_logo"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/logo_fashion"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Welcome  Admin"
        android:textSize="@dimen/h1"
        android:textStyle="bold" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/background_container"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="14dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:text="Email"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_height="70dp"
                        android:background="@drawable/background_edittext"
                        android:drawableRight="@drawable/icon_check_circle_24"
                        android:inputType="textEmailAddress"
                        android:padding="8dp"
                         />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"

                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:text="Password"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editmatkhau"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/background_edittext"
                        android:autofillHints=""
                        android:drawableRight="@drawable/icon_check_circle_24"
                        android:inputType="textPassword"
                        android:padding="8dp"
                        />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:elevation="8dp"
                android:id="@+id/btndangnhap"
                android:text="Đăng Nhập"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/background_button_login"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="60dp"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>